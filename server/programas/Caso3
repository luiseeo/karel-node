/**
 * Caso prueba 3: Se prueban los estatutos de control. Primero recoge zumbadores mientras existan,
 * luego repite 3 veces girar a la izquierda, finalmente avanza si est√° el frente libre.
 */
class program{
	program(){
        while(nextToABeeper)
            pickbeeper();
        iterate(3)
            turnleft();
        if (frontIsClear)
            move();
        else
            turnleft();
		turnoff();
	}
}